---
import { SITE_DESCRIPTION, SITE_TITLE, mediaUrl } from "../../consts";
import type { PostEntity } from "../../types";
import { Image } from "astro:assets";
import { apiGet } from "../../lib/services";
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";

const page = Number(Astro.url.searchParams.get("page") ?? "1");
const pageSize = 10;
const { data, meta } = await apiGet<PostEntity[]>("/api/posts", {
  "pagination[page]": String(page),
  "pagination[pageSize]": String(pageSize),
  "sort[0]": "travelDate:desc",
  populate: "*",
});

const pageCount = meta?.pagination?.pageCount ?? 1;
---

<html>
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 960px;
      }
      .heading {
        margin-bottom: 1em;
        text-align: center;
      }
      ul {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
      }
      ul li img {
        margin-bottom: 0.5rem;
        border-radius: 12px;
        width: 100%;
      }
      ul li a {
        display: block;
      }
      .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1;
      }
      .date {
        margin: 0;
        color: rgb(var(--gray));
      }
      .excerpt {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1.25;
      }
      ul a:hover img {
        box-shadow: var(--box-shadow);
      }
      @media (max-width: 720px) {
        ul {
          grid-template-columns: 1fr;
          gap: 0.5em;
        }
        ul li {
          text-align: center;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section>
        <h1 class="heading">√öltimas Aventuras üöÄ</h1>
        <ul>
          {
            data.map((p) => (
              <li>
                <a href={`/blog/${p.slug}/`}>
                  {mediaUrl(p.coverImage?.formats?.medium?.url) && (
                    <Image
                      src={mediaUrl(p.coverImage?.formats?.medium?.url)!}
                      alt={p.coverImage?.alternativeText || p.title}
                      width={300}
                      height={200}
                    />
                  )}
                  <h4>{p.title}</h4>
                  <span class="date">
                    <FormattedDate
                      date={
                        p.travelDate
                          ? new Date(p.travelDate)
                          : new Date(p.createdAt)
                      }
                    />
                  </span>
                  {p.excerpt ? <p class="excerpt">{p.excerpt}</p> : null}
                </a>
              </li>
            ))
          }
        </ul>

        <nav style="display:flex; gap:12px; margin-top:24px;">
          {page > 1 ? <a href={`/blog?page=${page - 1}`}>‚Üê Prev</a> : <span />}
          <span>P√°gina {page} / {pageCount}</span>
          {
            page < pageCount ? (
              <a href={`/blog?page=${page + 1}`}>Next ‚Üí</a>
            ) : (
              <span />
            )
          }
        </nav>
      </section>
    </main>
    <Footer />
  </body>
</html>
